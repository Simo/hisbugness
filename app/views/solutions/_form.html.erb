<%= form_for @solution, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :implemented, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :implemented, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :implemented_at, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :implemented_at, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :effort, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :effort, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :solved, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :solved, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :solved_at, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :solved_at, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  solutions_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
