<%- model_class = Solution -%>
<div class="page-header">
  <h1><%=t '.title', :default => Solution %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:implemented) %></dt>
      <dd><pre class="prettyprint"><%= @solution.implemented %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:implemented_at) %></dt>
      <dd><pre class="prettyprint"><%= @solution.implemented_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:effort) %></dt>
      <dd><pre class="prettyprint"><%= @solution.effort %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:solved) %></dt>
      <dd><pre class="prettyprint"><%= @solution.solved %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:solved_at) %></dt>
      <dd><pre class="prettyprint"><%= @solution.solved_at %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              solutions_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_solution_path(@solution), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              solution_path(@solution),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

