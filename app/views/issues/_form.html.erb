<%= form_for @issue, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :insert_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :insert_date, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :component, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :component, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :feature, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :feature, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :description, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :note, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :note, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :accepted, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :accepted, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :accepted_at, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :accepted_at, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  issues_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
